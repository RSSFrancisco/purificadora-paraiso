<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nuevoCliente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="71dp"
                        android:layout_height="match_parent"
                        android:paddingTop="5dp"
                        app:srcCompat="@drawable/agregar" />

                    <TextView
                        android:id="@+id/lblNuevoCliente"
                        android:layout_width="308dp"
                        android:layout_height="27dp"
                        android:layout_marginVertical="@dimen/activity_horizontal_margin"
                        android:text="AGREGAR CLIENTE"

                        android:textSize="20sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:background="@drawable/estilo_bordes"
                    android:ems="10"
                    android:textSize="26sp"
                    android:hint="NOMBRE"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtFechaNacimientoDD"
                        android:layout_width="79dp"
                        android:layout_height="42dp"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:background="@drawable/estilo_bordes"
                        android:ems="10"
                        android:hint="Dia: 01"
                        android:inputType="date"
                        android:textAlignment="center"
                        android:textSize="26sp" />

                    <EditText
                        android:id="@+id/txtFechaNacimientoMM"
                        android:layout_width="100dp"
                        android:layout_height="42dp"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:background="@drawable/estilo_bordes"
                        android:ems="10"
                        android:hint="Mes: 07"
                        android:inputType="date"
                        android:textAlignment="center"
                        android:textSize="26sp" />

                    <EditText
                        android:id="@+id/txtFechaNacimientoYY"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:background="@drawable/estilo_bordes"
                        android:ems="10"
                        android:hint="Año: 2019"
                        android:inputType="date"
                        android:textSize="23sp" />

                </LinearLayout>



                <EditText
                    android:id="@+id/txtDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:background="@drawable/estilo_bordes"
                    android:ems="10"
                    android:textSize="26sp"
                    android:hint="DIRECCIÓN"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />


                <EditText
                    android:id="@+id/txtColonia"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:background="@drawable/estilo_bordes"
                    android:ems="10"
                    android:hint="COLONIA"
                    android:textSize="26sp"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />


                <EditText
                    android:id="@+id/txtCiudad"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:background="@drawable/estilo_bordes"
                    android:ems="10"
                    android:hint="CIUDAD"
                    android:textSize="26sp"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />


                <EditText
                    android:id="@+id/txtEstado"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:background="@drawable/estilo_bordes"
                    android:ems="10"
                    android:hint="ESTADO"
                    android:textSize="26sp"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />


                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:background="@color/colorPrimary"
                    android:text="Guardar"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>